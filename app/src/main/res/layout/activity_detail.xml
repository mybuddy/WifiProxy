<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/detail_button_cancel"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/btnCancel"
            android:layout_toLeftOf="@+id/btnConfirm"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/detail_button_confirm"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_proxy"/>

    <TextView
        android:id="@+id/tvProxy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"
            android:layout_toLeftOf="@+id/etHostname"
            android:layout_toStartOf="@+id/etHostname"
            android:layout_alignTop="@+id/etHostname"
            android:layout_alignBottom="@+id/etHostname"
            android:gravity="center"
            android:text="@string/detail_proxy_hostname"/>
        <EditText
            android:id="@+id/etHostname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"
            android:layout_toLeftOf="@+id/etPort"
            android:layout_toStartOf="@+id/etPort"
            android:layout_alignTop="@+id/etPort"
            android:layout_alignBottom="@+id/etPort"
            android:gravity="center"
            android:text="@string/detail_proxy_port"/>
        <EditText
            android:id="@+id/etPort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            android:layout_below="@id/etHostname"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"
            android:layout_toLeftOf="@+id/etBypassFor"
            android:layout_toStartOf="@+id/etBypassFor"
            android:layout_alignTop="@+id/etBypassFor"
            android:layout_alignBottom="@+id/etBypassFor"
            android:gravity="center"
            android:text="@string/detail_proxy_bypass_for"/>
        <EditText
            android:id="@+id/etBypassFor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            android:layout_below="@id/etPort"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>